$neon-green = #28FC91
$green-black = #0f2219

html, body, .viewport
  width 100%
  height 100%
  margin 0
  background: $green-black
  font-family: ahamonomonospaced !important

.body_left
  background: $green-black
  border: 2px solid $neon-green

.body_right
  border: 2px solid $neon-green

.header
  background: $green-black
  border: 2px solid $neon-green
  flex: 1 100%
  display: flex
  padding: 10px
  margin: 10px

@font-face
  font-family 'ahamonomonospaced'
  src url('./ahamono-webfont.woff2') format('woff2'),

url('./ahamono-webfont.woff') format('woff')
font-weight normal
font-style normal
.global
  display: flex
  flex-wrap: wrap
  flex-direction: row
  justify-content: space-around
  align-content space-around

.container
  border: 2px solid $neon-green
  flex: 1 100%
  padding: 10px
  margin: 10px



